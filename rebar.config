{src_dirs, ["./priv/tracers", "./src"]}.
{cover_enabled, true}.
{edoc_opts, [{preprocess, true}]}.
{erl_opts, [
    warnings_as_errors,
    {parse_transform, lager_transform},
    {src_dirs, ["src", "priv/tracers"]},
    {platform_define, "^R[1-9]", no_otp_namespaced_types},
    {platform_define, "^R1[0-5]", no_otp_crypto_hash},
    {platform_define, "^[1-9][0-9]", save_state_with_timeout},
    {d, 'TEST_FS2_BACKEND_IN_RIAK_KV'}
]}.
{eunit_opts, [
    no_tty,  %% This turns off the default output, MUST HAVE
    {report, {eunit_progress, [colored, profile]}} %% Use `profile' to see test timing information
    %% Uses the progress formatter with ANSI-colored output
]}.

{xref_checks, []}.
%% XXX yz_kv is here becase Ryan has not yet made a generic hook interface for object modification
%% XXX yz_stat is here for similar reasons -- we do not yet support dynamic stat hooks
{xref_queries, [{"(XC - UC) || (XU - X - B - \"(cluster_info|dtrace|yz_kv|yz_stat)\" : Mod)", []}]}.

{erl_first_files, ["src/riak_kv_backend.erl"]}.

{deps, [
    {bitcask, ".*", {git, "git://github.com/basho/bitcask.git", {branch, "feature/otp-17"}}},
    {eper, ".*", {git, "git://github.com/basho/eper.git", {branch, "develop"}}},
    {erlang_js, ".*", {git, "git://github.com/basho/erlang_js.git", {branch, "develop"}}},
    {eunit_formatters, ".*", {git, "git://github.com/seancribbs/eunit_formatters", {branch, "master"}}},
    {lager, ".*", {git, "git://github.com/basho/lager.git", {branch, "feature/otp-17"}}},
    {otp_compat, ".*", {git, "git://github.com/tburghart/otp_compat.git", {branch, "master"}}},
    {riak_api, ".*", {git, "git://github.com/basho/riak_api.git", {branch, "feature/otp-17"}}},
    {riak_dt, ".*", {git, "git://github.com/basho/riak_dt.git", {branch, "feature/otp-17"}}},
    {riak_pipe, ".*", {git, "git://github.com/basho/riak_pipe.git", {branch, "feature/otp-17"}}},
    {sext, ".*", {git, "git://github.com/basho/sext.git", {branch, "master"}}},
    {sidejob, ".*", {git, "git://github.com/basho/sidejob.git", {branch, "develop"}}}
]}.
